@page
@model MiladHospital.Pages.Reservation.AppointmentListModel
@{
    ViewData["Title"] = "لیست نوبت ها";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست نوبت دهی آزاد</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row ">
    <div class="col-lg-12">
        <form>
            <div class="col-sm-3 col-md-3 ">

                <button type="submit" class="btn btn-info ">بگرد</button>

                <a class="btn btn-default btn-sm" href="/Reservation/AppointmentList">خالی</a>
            </div>
            <div class="col-sm-3 col-md-3">
                <select name="filterfield" class="form-control" asp-items="@Model.specialtyList"></select>
            </div>
        </form>
    </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست نوبت دهی آزاد
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">


                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>پزشک</th>
                                        <th>تاریخ ویزیت</th>
                                        <th>محدوده زمانی ویزیت</th>
                                        <th>ظرفیت باقیمانده</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.appointmentInfoViewModels)
                                    {
                                        <tr>
                                            <td>@item.Field</td>
                                            <td>@item.DoctorName</td>
                                            <td>@item.ReserveDate.ToShamsi()</td>
                                            <td>@item.AppointmentsTime</td>
                                            <td>@item.RemainCapacity</td>
                                            <td>


                                                <a asp-page="AppointmentReservation" asp-route-AppointmentId="@item.Id" class="btn btn-info btn-sm">
                                                    رزرو نوبت
                                                </a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table><div class="row">
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
